" --- Color Scheme
syntax enable

" --- List Characters
set listchars=tab:>-,trail:~,extends:>,precedes:<
set list

" --- General
set number
set linebreak
set showbreak=+++
set textwidth=100
set showmatch
set spell
set visualbell

set hlsearch
set smartcase
set ignorecase
set incsearch

set autoindent
set shiftwidth=4
set smartindent
set smarttab
set tabstop=4
set softtabstop=4
